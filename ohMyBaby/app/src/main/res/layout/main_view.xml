<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ohmybaby.thezili.com.ohmybaby.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="1dp">

        <Button
            android:id="@+id/acce_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accelerometer Test" />

        <Button
            android:id="@+id/gyro_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gyroscope Test" />

        <Button
            android:id="@+id/camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Camera Test" />

        <Button
            android:id="@+id/opencv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OpenCV Test" />

        <Button
            android:id="@+id/upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Upload Test" />

        <Button
            android:id="@+id/shake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shake Test" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>
